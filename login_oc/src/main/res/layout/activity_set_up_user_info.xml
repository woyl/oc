<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadAvatarActivity"
    tools:ignore="ResourceName">


    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:src="@mipmap/icon_update_head"
        android:layout_height="wrap_content"/>






    <LinearLayout
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:orientation="vertical"
        android:layout_marginTop="98dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写你的昵称"
            android:textColor="@color/C000000"
            android:textSize="18sp"
            />


        <EditText
            android:layout_marginTop="15dp"
            android:hint="输入昵称（请文明用名）"
            android:textColor="#ffcccccc"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColorHint="@color/C333333"
            android:singleLine="true"
            android:maxLength="15"
            android:background="@null"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/C333333"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择你的性别"
            android:textColor="#ff000000"
            android:textSize="18sp"
            />


        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册完成，您的性别将无法修改"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />


        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/image_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/sex_icon_male_unsel"/>
                <TextView
                    android:textColor="#ff6bb9d1"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="我是男生"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/image_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/sex_icon_female_unsel"/>
                <TextView
                    android:text="我是女生"
                    android:textColor="#ffd16bb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择出生日期"
            android:textColor="@color/C000000"
            android:textSize="18sp"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确的生日将提高匹配质量"
            android:textColor="@color/C999999"
            android:textSize="14sp"
            />


        <LinearLayout
            android:id="@+id/ll_brith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/ll_play"
            android:layout_marginRight="40dp"
            android:layout_marginTop="23dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_year"
                    android:textColor="@color/Cffffff"
                    android:textSize="18sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/Ccccccc"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textSize="14sp"
                android:textColor="@color/C333333"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_month"
                    android:textColor="@color/Cffffff"
                    android:textSize="18sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/Ccccccc"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textSize="14sp"
                android:textColor="@color/C333333"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_day"
                    android:textColor="@color/Cffffff"
                    android:textSize="18sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/Ccccccc"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textSize="14sp"
                android:textColor="@color/C333333"/>
        </LinearLayout>



        <TextView
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/Cffffff"
            android:textSize="16sp"
            android:background="@drawable/base_btn_black_radius_5dp"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>


    </LinearLayout>

</RelativeLayout>